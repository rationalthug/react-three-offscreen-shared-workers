{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2018",
    "lib": ["WebWorker", "dom", "ES2018"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "removeComments": false,
    "baseUrl": ".",
    "types": ["@types/sharedworker"]
  },
  "include": ["src"]
}
